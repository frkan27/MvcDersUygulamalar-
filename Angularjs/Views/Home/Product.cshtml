
@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="myApp">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Product</title>
    
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/app.js"></script>

</head>
<body>
    <div class="container" ng-controller="ProductCtrl"> 
        <form name="urunekle">
            <input type="text" placeholder="Ürün Adı" ng-model="yeni.urunAdi" /><br />
            <input type="text" placeholder="Fİyat" ng-model="yeni.fiyat" /><br />
            <input type="button" value="Ekle" ng-click="ekle()" /><br />
        </form>
    </div>
    <br />
    <ul>
        <li ng-repeat="item in urunler track by item.id">{{item.urunAdi}} - {{item.fiyat}} </li>
    </ul>
</body>
</html>
